<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEvento.Views.ResumoEventoPage"             
             BackgroundColor="LightGray">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="Resumo do Evento"
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="LightSlateGrey"
                   FontAttributes="Italic"
                   FontFamily="Super Joyful"/>
            </Frame>
            
            <Label Text="{Binding Nome}" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"/>
            
            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy}'}" 
                    Padding="5"/>
            </Frame>

            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="{Binding DataFim, StringFormat='Término: {0:dd/MM/yyyy}'}" 
                   Padding="5"/>
            </Frame>

            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="{Binding DuracaoEmDias, StringFormat='Duração: {0} dias'}" 
                   Padding="5"/>         
            </Frame>

            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" 
                   Padding="5"/>                
            </Frame>

            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="{Binding Local, StringFormat='Local: {0}'}" 
                   Padding="5"/>
            </Frame>

            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por participante: R$ {0:F2}'}" 
                   Padding="5"/>
            </Frame>

            <Frame BorderColor="LightSlateGray"
                   BackgroundColor="white"
                   CornerRadius="10"
                   Padding="5"
                   HasShadow="False">
                <Label Text="{Binding CustoTotal, StringFormat='Custo total: R$ {0:F2}'}"
                   FontAttributes="Bold" FontSize="18" BackgroundColor="white" Padding="5"/>
            </Frame>                       
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
